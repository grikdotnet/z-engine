{
    "name": "grikdotnet/z-engine",
    "description": "Library that allows converting final classes to non-final",
    "type": "library",
    "require": {
        "php": ">=8.0",
        "ext-ffi": "*"
    },
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "Alexander Lisachenko",
            "email": "lisachenko.it@gmail.com"
        }
    ],
    "autoload": {
        "psr-4" : {
            "ZEngine\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "ZEngine\\" : "tests/"
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^8.5.15 || ^9.0.0 || ^10.0.0 || ^11.0.0",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ext-readline": "*"
    }
}
